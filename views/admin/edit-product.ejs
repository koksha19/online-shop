<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
<%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : ''%>"
                       type="text"
                       name="title"
                       id="title"
                       value="<% if(editing || validationErrors) { %><%=product.title%><% } %>">
            </div>
            <!-- <div class="form-control">
                <label for="title">Image URL</label>
                <input class="<%= validationErrors.find(e => e.path === 'imageUrl') ? 'invalid' : ''%>"
                       type="text"
                       name="imageUrl"
                       id="title"
                       value="<% if(editing || validationErrors) { %><%=product.imageUrl%><% } %>"> -->
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file"
                       name="image"
                       id="image">
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                <input class="<%= validationErrors.find(e => e.path === 'description') ? 'invalid' : ''%>"
                       type="text"
                       name="description"
                       id="title"
                       value="<% if(editing || validationErrors) { %><%=product.description%><% }  %>">
            </div>
            <div class="form-control">
                   <label for="title">Price</label>
                <input class="<%= validationErrors.find(e => e.path === 'price') ? 'invalid' : ''%>"
                       type="text"
                       name="price"
                       id="title"
                       value="<% if(editing || validationErrors) { %><%=product.price%><% } %>">
            </div>
            <%if(editing) {%>
                <input type="hidden" value="<%=product._id%>" name="productId">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if(editing) { %> Edit Product <% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>